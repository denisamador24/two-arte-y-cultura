<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ArteYCultura" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/ligth_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="TextBig">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMd" >
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSm">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="CardViewListItem">
        <item name="android:animateLayoutChanges">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">12dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>


    <style name="Style_EditTextInput" >
        <item name="android:drawablePadding">8dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/turquest</item>
        <item name="android:backgroundTint">@color/turquest</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="EditTextName" parent="Style_EditTextInput">
        <item name="android:drawableStart">@drawable/icon_person</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="EditTextPassword" parent="Style_EditTextInput">
        <item name="android:drawableStart">@drawable/icon_lock</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="PrimaryButton">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="SecondaryButton">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/dark_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:layout_height">64dp</item>
    </style>
</resources>